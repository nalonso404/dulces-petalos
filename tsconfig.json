{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "lib": [
      "esnext",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "noUnusedParameters": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "jest.config.ts", 
    "src",
    "src/**/*",
    "src/__tests__/**/*"
  ],
  "exclude": [
    ".yarn",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
  ]
}
